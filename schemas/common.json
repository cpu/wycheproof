{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Source": {
      "type": "object",
      "required": ["name", "generator", "version", "maintainers"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "generator": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "maintainers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
